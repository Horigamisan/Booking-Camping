@using Newtonsoft.Json

@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@


                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                            <h6 class="section-title bg-white text-center text-primary px-3">Các vị trí</h6>
                            <h2 class="mb-5">Các vị trí tuyệt vời</h2>
                        </div>
                        <div class="row g-4 justify-content-center">
                            @{
                                var jsonData = JsonConvert.DeserializeObject(ViewBag.JsonData);
                                foreach (var item in jsonData)
                                {
                                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                                        <div class="package-item">
                                            <div class="overflow-hidden">
                                                <img class="img-fluid" src="~/img/@item.hinhanh" alt="">
                                            </div>
                                            <div class="d-flex border-bottom">
                                                <small class="flex-fill text-center border-end py-2"><i class="fa fa-map-marker-alt text-primary me-2"></i>Khu cắm trại</small>
                                                <small class="flex-fill text-center py-2"><i class="fa fa-users text-primary me-2"></i>@item.soluongnguoi người</small>
                                            </div>
                                            <div class="text-center">
                                                                                            <div class="p-4">
                                                <h5 class="mb-3"><a href="#">@item.tenvitri</a></h5>
                                            <div class="mb-3">
                                                    @{
                                                        decimal rating = item.diemdanhgia;
                                                        int fullStars = (int)rating;
                                                        decimal halfStar = rating - fullStars;
                                                        int emptyStars = 5 - fullStars - (halfStar > 0 ? 1 : 0);
        
                                                        for (int i = 0; i < fullStars; i++)
                                                        {
                                                            <small class="fa fa-star text-primary"></small>
                                                        }
                                                        if (halfStar > 0)
                                                        {
                                                            <small class="fa fa-star-half-o text-primary"></small>
                                                        }
                                                        for (int i = 0; i < emptyStars; i++)
                                                        {
                                                            <small class="fa fa-star-o text-primary"></small>
                                                        }
                                                    }
                                                </div>

                                                <p class="mb-4">@item.mota</p>
                                                <div class="d-flex align-items-center">
                                                    <div class="flex-fill">
                                                        <h5 class="mb-0">@item.giatien VNĐ</h5>
                                                    </div>
                                                    <div class="flex-fill text-end">
                                                        <a asp-action="DetailPosition" asp-controller="Booking" 
                                                        asp-route-id="@item.vitriId" 
                                                        asp-route-soluongnguoi="@ViewBag.Soluongnguoi" 
                                                        asp-route-ngaybatdau="@ViewBag.Ngaybatdau"
                                                        asp-route-ngayketthuc="@ViewBag.Ngayketthuc"
                                                        class="btn btn-primary">Đặt ngay</a>
                                                    </div>
                                                </div>
                                            </div>

                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div
    </div>
