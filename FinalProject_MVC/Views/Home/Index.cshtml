@using Newtonsoft.Json
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid bg-primary py-5 mb-5 hero-header">
    <div class="container py-5">
        <div class="row justify-content-center py-5">
            <div class="col-lg-10 pt-lg-5 mt-lg-5 text-center">
                <h1 class="display-3 text-white mb-3 animated slideInDown">Tận hưởng chuyến cắm trại của bạn với chúng tôi</h1>
                <p class="fs-4 text-white mb-4 animated slideInDown">Hãy để mọi áp lực được gỡ bỏ và tận hưởng chuyến hành trình</p>
                <div class="card card-7 align-items-center justify-content-center d-flex">
                    <div class="card-body">
                        <form class="form" method="get" action="/booking/search">
                            <div class="input-group input--medium">
                                <label class="label">Check-In</label>
                                <input class="input--style-1" type="text" name="Ngaybatdau" placeholder="mm/dd/yyyy" id="input-start">
                            </div>
                            <div class="input-group input--medium">
                                <label class="label">Check-Out</label>
                                <input class="input--style-1" type="text" name="Ngayketthuc" placeholder="mm/dd/yyyy" id="input-end">
                            </div>
                            <div class="input-group input--medium">
                                <label class="label">Khách</label>
                                <div class="input-group-icon js-number-input">
                                    <div class="icon-con">
                                        <span class="plus">+</span>
                                        <span class="minus">-</span>
                                    </div>
                                    <input class="input--style-1 quantity" type="text" name="Soluongnguoi" value="2">
                                </div>
                            </div>
                            <button class="btn-submit" type="submit">Tìm</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s" style="min-height: 400px;">
                <div class="position-relative h-100">
                    <img class="img-fluid position-absolute w-100 h-100" src="img/about.jpg" alt="" style="object-fit: cover;">
                </div>
            </div>
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.3s">
                <h6 class="section-title bg-white text-start text-primary pe-3">Về chúng tôi</h6>
                <h1 class="mb-4">Chào mừng đến <span class="text-primary">Camping</span></h1>
                <p class="mb-4">Hãy đặt chỗ của chúng tôi</p>
                <p class="mb-4">Những niềm vui của bạn cũng là của chúng tôi</p>
                <div class="row gy-2 gx-4 mb-4">
                    <div class="col-sm-6">
                        <p class="mb-0"><i class="fa fa-arrow-right text-primary me-2"></i>Thoải mái</p>
                    </div>
                    <div class="col-sm-6">
                        <p class="mb-0"><i class="fa fa-arrow-right text-primary me-2"></i>Nhanh chóng</p>
                    </div>
                    <div class="col-sm-6">
                        <p class="mb-0"><i class="fa fa-arrow-right text-primary me-2"></i>Nhiệt tình</p>
                    </div>
                    <div class="col-sm-6">
                        <p class="mb-0"><i class="fa fa-arrow-right text-primary me-2"></i>Hiếu khách</p>
                    </div>
                    <div class="col-sm-6">
                        <p class="mb-0"><i class="fa fa-arrow-right text-primary me-2"></i>Luôn luôn hỗ trợ</p>
                    </div>
                    <div class="col-sm-6">
                        <p class="mb-0"><i class="fa fa-arrow-right text-primary me-2"></i>24/7 Dịch vụ</p>
                    </div>
                </div>
                <a class="btn btn-primary py-3 px-5 mt-2" href="">Hãy đặt chỗ</a>
            </div>
        </div>
    </div>
</div>
<!-- About End -->

